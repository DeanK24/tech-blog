<div class="mb-6 pt-4">
    <a href="/dashboard/create/"><button id="create-post" class="button is-primary is-pulled-right">Create Post</button></a>
    <h2 class="title pb-4">Dashboard: Your Posts</h2>
    {{#if post.length}}
</div>
<div>
{{#each posts as |post|}}
{{> post-info post}}

<a href="/dashboard/edit/{{post.id}}"><button class="button mb-4 ml-5 is-warning">Edit post</button></a>
</div>
{{/each}}

{{else}} 
<h5 class="pb-4 has-text-centered is-italic">You do not have any posts</h5>
{{/if}}